<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>
  <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.2" />
    </startup>
    <log4net>
      <appender name="ColoredConsoleAppender" type="log4net.Appender.ColoredConsoleAppender">
        <mapping>
          <level value="ERROR" />
          <foreColor value="White" />
          <backColor value="Red" />
        </mapping>
        <layout type="log4net.Layout.PatternLayout">
          <conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] - %message%newline" />
        </layout>
      </appender>
      <appender name="RollingFile" type="log4net.Appender.RollingFileAppender">
        <file value="WebService.log" />
        <appendToFile value="true" />
        <maximumFileSize value="10MB" />
        <maxsizerollbackups value="10" />
        <rollingStyle value="Size" />
        <staticLogFileName value="false" />
        <PreserveLogFileNameExtension value="true" />
        <countDirection value="-1" />
        <layout type="log4net.Layout.PatternLayout">
          <conversionPattern value="%date %-5level %logger(%line): %message%newline" />
        </layout>
      </appender>
      <root>
        <priority value="DEBUG" />
        <appender-ref ref="ColoredConsoleAppender" />
        <!-- --><appender-ref ref="RollingFile" /> --&gt;
      </root>
  </log4net>
  <connectionStrings>
    <!-- TODO Create proper datawriter without superuser rights -->
    <add name="PostgresDotNet" connectionString="Server=127.0.0.1;Port=5432;User Id=ElisStockWriter;Password=kagenvokserhverdag;Database=ElisStock;" providerName="Npgsql" />
  </connectionStrings>
  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="log4net" publicKeyToken="669e0ddf0bb1aa2a" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-2.0.8.0" newVersion="2.0.8.0" />
      </dependentAssembly>
    </assemblyBinding>
  </runtime>
</configuration>